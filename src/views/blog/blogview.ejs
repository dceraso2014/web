<% include ../partials/head %>
		<!-- ====== Header ======  -->
		<section id="home" class="min-header" data-scroll-index="0">

                <div class="v-middle mt-30">
                    <div class="container">
                        <div class="row">
    
                            <div class="text-center col-md-12">
                                <h5><%= post.titulo %></h5>
                                <a href="/">Home</a>
                                <a href="/blog">Blog</a>
                                <a href="/blog/post/<%= post._id  %>">Detalle</a>
                            </div>
    
                        </div>
                    </div><!-- /row -->
                </div><!-- /container -->
            </section>
            <!-- ====== End Header ======  -->
    
            <!--====== Blog ======-->
            <section class="blogs section-padding">
                <div class="container">
                    <div class="row">
                        
                        <div class="col-md-8">
                            <div class="posts">
    
                                <div class="post mb-80">
                                    <div class="post-img">
                                        <a href="#0" class="full-width">
                                            <img src="<%= post.img1  %>" alt="">
                                        </a>
                                    </div>
                                    <div class="content">
                                        <div class="post-meta">
                                            <div class="post-title">
                                                <h5>
                                                    <a href="#0"><%= post.titulo  %></a>
                                                </h5>
                                            </div>
                                            <ul class="meta">
                                                
                                                
                                                <li>
                                                    <a href="#0">
                                                        <i class="fa fa-calendar" aria-hidden="true"></i>
                                                       
                                                        <% months = ['Enero','Febrero','Marzo','Abril','Mayo','Junio','Julio','Agosto','Septiembre','Octubre','Noviembre','Diciembre']; %>
                                                        <% days = ['Lunes','Miecoles','Jueves','Viernes','Sabado','Domingo']; %>
                                                        <span id="day"><%= days[date.getDay()] %></span>
                                                        <span id="daynum"><%= date.getDay() %></span>
                                                        <span id="month"><%= months[date.getMonth()] %></span>
                                                        <span id="year"><%= date.getFullYear() %></span>
                                                    </a>
                                                </li>
                                        
                                            </ul>
                                        </div>
    
                                        <div class="post-cont">
                                            <p><%= post.desc  %></p>
                                            <p class="spical">Lorem Ipsum is simply dummy text of the and type setting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book.</p>
